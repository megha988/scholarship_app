    android:orientation="vertical"
    tools:context=".ProgramFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
